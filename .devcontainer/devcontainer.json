{
	"name": "apt-workspace",

	"build": {
		"dockerfile": "Dockerfile"
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-azuretools.vscode-docker",
				"ms-python.python",
				"jeff-hykin.better-shellscript-syntax",
				"deitry.apt-source-list-syntax"
			]
		}
	},
	"updateRemoteUserUID": true,
	"forwardPorts": ["8888:8888"],
	"privileged": true,
	"remoteEnv": { "GRANT_SUDO": "yes" }
